@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container row p-0 m-0 ">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>

    @*Create book button that opens a modal.*@
    <div class="col-3">
        <button type="button" class="btn btn-info form-control text-white" data-toggle="modal" data-target="#exampleModal">
            Create new book
        </button>
    </div>

    @*Modal of create book.*@
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create New Book</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-page-handler="OnPost">
                    <div class="modal-body">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Book.Name"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Book.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Book.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Book.Author"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Book.Author" class="form-control" />
                            </div>
                            <span asp-validation-for="Book.Author" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Book.ISBN"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Book.ISBN" class="form-control" />
                            </div>
                            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary form-control" data-dismiss="modal">Close</button>
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>

                </form>
            </div>
        </div>
    </div>

    @*DataTable.*@
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th> Name</th>
                    <th> Author</th>
                    <th> ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    @*Modal of edit book.*@
    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form>
                    <div class="modal-body">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="Book.Id" id="Updateid" />
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Book.Name"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Book.Name" class="form-control" id="name" />
                            </div>
                            <span asp-validation-for="Book.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Book.Author"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Book.Author" class="form-control" id="author" />
                            </div>
                            <span asp-validation-for="Book.Author" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Book.ISBN"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Book.ISBN" class="form-control" id="isbn" />
                            </div>
                            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button class="btn btn-primary text-white onclick" id="myBtn" onclick="Update()">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="confirmDelete" role="dialog" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Parmanently</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure about this?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirm">Delete</button>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts
{
    <script src="~/js/bookList.js"></script>
}
